        </LinearLayout>

        <ImageView
            android:id="@+id/ivPort"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/loPort"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_triangle" />

    </RelativeLayout>
    
    </LinearLayout>

</LinearLayout>